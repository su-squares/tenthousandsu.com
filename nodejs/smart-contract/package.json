{
  "name": "smart-contract",
  "version": "1.0.0",
  "private": true,
  "description": "Smart contract development workspace",
  "keywords": [
    "smart-contract",
    "blockchain",
    "web3"
  ],
  "author": "ritorhymes",
  "scripts": {
    "--- Site Scripts ---": ":",
    "update:assets": "node site-scripts/update-assets.mjs",
    "update:assets:sunet": "node site-scripts/update-assets.mjs --network=sunet",
    "update:assets:sepolia": "node site-scripts/update-assets.mjs --network=sepolia",
    "listen:sepolia": "cross-env NETWORK=sepolia node site-scripts/event-listener/index.mjs",
    "listen:sunet": "cross-env NETWORK=sunet node site-scripts/event-listener/index.mjs",
    "gen:site-config": "node site-scripts/gen-site-config.js",
    "delete:sunet": "node -e \"const fs=require('fs');['../../build-sunet','../../erc721-sunet'].forEach(p=>fs.rmSync(p,{recursive:true,force:true}))\"",
    "delete:sepolia": "node -e \"const fs=require('fs');['../../build-sepolia','../../erc721-sepolia'].forEach(p=>fs.rmSync(p,{recursive:true,force:true}))\"",
    "delete:runtime-config": "node -e \"require('fs').rmSync('../../assets/web3/config/runtime.generated.js', {force: true})\"",
    "delete:all": "node -e \"const fs=require('fs');['../../build-sunet','../../build-sepolia','../../erc721-sunet','../../erc721-sepolia','../../assets/web3/config/runtime.generated.js'].forEach(p=>fs.rmSync(p,{recursive:true,force:true}))\"",
    "--- Blockchain Scripts ---": ":",
    "sunet:setup": "ts-node sunet/scripts/init-network.ts",
    "sunet:start": "cd sunet && docker compose --env-file .env.sunet -f compose/docker-compose.yml up -d",
    "sunet:start:node": "cd sunet && docker compose --env-file .env.sunet -f compose/docker-compose.besu.yml up -d",
    "sunet:stop": "cd sunet && docker compose --env-file .env.sunet -f compose/docker-compose.yml down",
    "sunet:stop:node": "cd sunet && docker compose --env-file .env.sunet -f compose/docker-compose.besu.yml down",
    "sunet:clean": "ts-node sunet/scripts/clean-data.ts",
    "sunet:logs": "cd sunet && docker compose --env-file .env.sunet -f compose/docker-compose.yml logs -f",
    "sunet:logs:node": "cd sunet && docker compose --env-file .env.sunet -f compose/docker-compose.besu.yml logs -f besu",
    "sunet:logs:blockscout": "cd sunet && docker compose --env-file .env.sunet -f compose/docker-compose.yml logs -f backend frontend",
    "sunet:status": "cd sunet && docker compose --env-file .env.sunet -f compose/docker-compose.yml ps",
    "sunet:generate:genesis": "ts-node sunet/scripts/generate-genesis.ts",
    "--- Smart Contract Scripts ---": ":",
    "hardhat": "hardhat",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "clean": "hardhat clean",
    "-- SuNet --": ":",
    "deploy:sunet:primary": "hardhat run scripts/deploy/deploy-primary.ts --network sunet",
    "deploy:sunet:underlay": "hardhat run scripts/deploy/deploy-underlay.ts --network sunet",
    "deploy:sunet:all": "hardhat run scripts/deploy/deploy-all.ts --network sunet",
    "supply:sunet": "hardhat run scripts/supply.ts --network sunet",
    "buy:sunet": "hardhat run scripts/buy.ts --network sunet",
    "buy:sunet:all": "cross-env BUY_TOKENS=1-10000 hardhat run scripts/buy.ts --network sunet",
    "balance:sunet": "hardhat run scripts/balance.ts --network sunet",
    "transfer:sunet": "hardhat run scripts/transfer.ts --network sunet",
    "assign:sunet:ceo": "hardhat run scripts/roles/assign-CEO.ts --network sunet",
    "assign:sunet:cfo": "hardhat run scripts/roles/assign-CFO.ts --network sunet",
    "assign:sunet:coo": "hardhat run scripts/roles/assign-COO.ts --network sunet",
    "assign:sunet:ceo:underlay": "hardhat run scripts/roles/assign-CEO-underlay.ts --network sunet",
    "assign:sunet:cfo:underlay": "hardhat run scripts/roles/assign-CFO-underlay.ts --network sunet",
    "assign:sunet:read": "hardhat run scripts/roles/read-assigned.ts --network sunet",
    "withdraw:sunet": "hardhat run scripts/roles/withdraw.ts --network sunet",
    "withdraw-check:sunet": "hardhat run scripts/roles/withdraw-check.ts --network sunet",
    "promo:sunet:transfer": "hardhat run scripts/roles/promo-transfer.ts --network sunet",
    "promo:sunet:balance": "hardhat run scripts/roles/promo-balance.ts --network sunet",
    "token-check:sunet": "hardhat run scripts/token-check.ts --network sunet",
    "personalize:sunet:underlay": "hardhat run scripts/personalizations/personalize-single-underlay.ts --network sunet",
    "personalize:sunet:primary": "hardhat run scripts/personalizations/personalize-single-primary.ts --network sunet",
    "personalize:sunet:underlay-batch": "hardhat run scripts/personalizations/personalize-batch-underlay.ts --network sunet",
    "-- Sepolia --": ":",
    "deploy:sepolia:primary": "hardhat run scripts/deploy/deploy-primary.ts --network sepolia",
    "deploy:sepolia:underlay": "hardhat run scripts/deploy/deploy-underlay.ts --network sepolia",
    "deploy:sepolia:all": "hardhat run scripts/deploy/deploy-all.ts --network sepolia",
    "supply:sepolia": "hardhat run scripts/supply.ts --network sepolia",
    "buy:sepolia": "hardhat run scripts/buy.ts --network sepolia",
    "balance:sepolia": "hardhat run scripts/balance.ts --network sepolia",
    "transfer:sepolia": "hardhat run scripts/transfer.ts --network sepolia",
    "assign:sepolia:ceo": "hardhat run scripts/roles/assign-CEO.ts --network sepolia",
    "assign:sepolia:cfo": "hardhat run scripts/roles/assign-CFO.ts --network sepolia",
    "assign:sepolia:coo": "hardhat run scripts/roles/assign-COO.ts --network sepolia",
    "assign:sepolia:ceo:underlay": "hardhat run scripts/roles/assign-CEO-underlay.ts --network sepolia",
    "assign:sepolia:cfo:underlay": "hardhat run scripts/roles/assign-CFO-underlay.ts --network sepolia",
    "assign:sepolia:read": "hardhat run scripts/roles/read-assigned.ts --network sepolia",
    "withdraw:sepolia": "hardhat run scripts/roles/withdraw.ts --network sepolia",
    "withdraw-check:sepolia": "hardhat run scripts/roles/withdraw-check.ts --network sepolia",
    "promo:sepolia:transfer": "hardhat run scripts/roles/promo-transfer.ts --network sepolia",
    "promo:sepolia:balance": "hardhat run scripts/roles/promo-balance.ts --network sepolia",
    "token-check:sepolia": "hardhat run scripts/token-check.ts --network sepolia",
    "personalize:sepolia:underlay": "hardhat run scripts/personalizations/personalize-single-underlay.ts --network sepolia",
    "personalize:sepolia:primary": "hardhat run scripts/personalizations/personalize-single-primary.ts --network sepolia",
    "personalize:sepolia:underlay-batch": "hardhat run scripts/personalizations/personalize-batch-underlay.ts --network sepolia"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@types/fs-extra": "^11.0.4",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.10.0",
    "@types/prompts": "^2.4.9",
    "cross-env": "^10.1.0",
    "hardhat": "^2.22.8",
    "hardhat-gas-reporter": "^1.0.10",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "fs-extra": "^11.2.0",
    "prompts": "^2.4.2",
    "sharp": "^0.34.2"
  }
}
