{
  "name": "smart-contract",
  "version": "1.0.0",
  "private": true,
  "description": "Smart contract development workspace",
  "keywords": ["smart-contract", "blockchain", "web3"],
  "author": "ritorhymes",
  "scripts": {
    "--- Blockchain Scripts ---": ":",
    "sunet:setup": "ts-node sunet/scripts-sunet/init-network.ts",
    "sunet:start": "cd sunet && docker compose -f compose/docker-compose.yml up -d",
    "sunet:start:node": "cd sunet && docker compose -f compose/docker-compose.besu.yml up -d",
    "sunet:stop": "cd sunet && docker compose -f compose/docker-compose.yml down",
    "sunet:stop:node": "cd sunet && docker compose -f compose/docker-compose.besu.yml down",
    "sunet:clean": "ts-node sunet/scripts-sunet/clean-data.ts",
    "sunet:logs": "cd sunet && docker compose -f compose/docker-compose.yml logs -f",
    "sunet:logs:node": "cd sunet && docker compose -f compose/docker-compose.besu.yml logs -f besu",
    "sunet:logs:blockscout": "cd sunet && docker compose -f compose/docker-compose.yml logs -f backend frontend",
    "sunet:status": "cd sunet && docker compose -f compose/docker-compose.yml ps",
    "sunet:generate:genesis": "ts-node sunet/scripts-sunet/generate-genesis.ts",
    "sunet:reveal:key": "ts-node sunet/scripts-sunet/reveal-key.ts",
    "sunet:reveal:address": "ts-node sunet/scripts-sunet/reveal-address.ts",
    "--- Smart Contract Scripts ---": ":",
    "hardhat": "hardhat",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "deploy:sepolia:primary": "hardhat run scripts/deploy-primary.ts --network sepolia",
    "deploy:sepolia:underlay": "hardhat run scripts/deploy-underlay.ts --network sepolia",
    "deploy:sepolia:all": "hardhat run scripts/deploy-all.ts --network sepolia",
    "deploy:sunet:primary": "hardhat run scripts/deploy-primary.ts --network sunet",
    "deploy:sunet:underlay": "hardhat run scripts/deploy-underlay.ts --network sunet",
    "deploy:sunet:all": "hardhat run scripts/deploy-all.ts --network sunet"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/prompts": "^2.4.9",
    "hardhat": "^2.22.8",
    "hardhat-gas-reporter": "^1.0.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "fs-extra": "^11.2.0",
    "prompts": "^2.4.2"
  }
}
