{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "hardhat"],
    "outDir": "dist"
  },
  "include": ["hardhat.config.ts", "scripts/**/*.ts", "contracts/**/*.sol"],
  "exclude": ["sunet/**"]
}
