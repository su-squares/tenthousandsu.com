{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "hardhat"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@script-utils/*": ["scripts-utils/*"]
    }
  },
  "include": ["hardhat.config.ts", "scripts/**/*.ts", "scripts-utils/**/*.ts", "contracts/**/*.sol"],
  "exclude": ["sunet/**"]
}
