{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "hardhat",
      "mocha",
      "chai"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@script-utils/*": [
        "scripts-utils/*"
      ],
      "@test/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "scripts-utils/**/*.ts",
    "test/**/*.ts",
    "contracts/**/*.sol"
  ],
  "exclude": [
    "sunet/**"
  ]
}