# Chain selection and logging
# Allowed values: mainnet | sepolia | sunet
CHAIN=mainnet
DEBUG=false

# WalletConnect project id (optional override)
WALLETCONNECT_PROJECT_ID=

# Asset base paths (optional; used by frontend and asset builder)
ASSET_BASE_MAINNET=/build
ASSET_BASE_SEPOLIA=/build-sepolia
ASSET_BASE_SUNET=/build-sunet

# Mainnet overrides (optional; defaults baked into the site)
MAINNET_PRIMARY_ADDRESS=
MAINNET_UNDERLAY_ADDRESS=

# Sepolia addresses (if CHAIN=sepolia, if blank falls back to smart-contract/contracts-deployed/primary-sepolia.json and /underlay-sepolia.json)
SEPOLIA_PRIMARY_ADDRESS=
SEPOLIA_UNDERLAY_ADDRESS=
SEPOLIA_RPC_URL=
SEPOLIA_TOKEN_URI_BASE=

# Sunet addresses (required if CHAIN=sunet if blank falls back to smart-contract/contracts-deployed/primary-sunet.json and /underlay-sunet.json)
SUNET_PRIMARY_ADDRESS=
SUNET_UNDERLAY_ADDRESS=
SUNET_CHAIN_ID=1337
SUNET_BLOCK_EXPLORER_URL=http://localhost:4001
SUNET_RPC_URL=http://127.0.0.1:8545
SUNET_TOKEN_URI_BASE=http://127.0.0.1:4000/erc721-sunet/

# Pricing (UI only; defaults: 0.5 ETH mint, 0.001 ETH personalize)
MINT_PRICE_ETH=0.5
PERSONALIZE_PRICE_ETH=0.001
